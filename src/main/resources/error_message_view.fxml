<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml" cache="true" cacheHint="SPEED" maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity" prefHeight="728.0" prefWidth="1024.0"
            stylesheets="@styles/design/error.css, @styles/design/root.css,  @styles/roots/dialogs.css" xmlns="http://javafx.com/javafx"
            fx:controller="com.example.demo.controller.ErrorController">
    <center>
        <VBox alignment="BOTTOM_CENTER" cache="true" cacheHint="SPEED" maxHeight="-Infinity" maxWidth="-Infinity"
              minHeight="-Infinity" minWidth="-Infinity" prefHeight="640.0" prefWidth="900.0" spacing="4.0"
              styleClass="pane-container-purple" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
            <padding>
                <Insets bottom="20.0" top="20.0"/>
            </padding>
            <ImageView cache="true" cacheHint="SPEED" fitHeight="96.0" fitWidth="96.0" opacity="0.5" pickOnBounds="true"
                       preserveRatio="true">
                <Image url="@/gfx/design/cross.png"/>
            </ImageView>
            <Label fx:id="errLabel" alignment="TOP_CENTER" cache="true" cacheHint="SPEED"
                   maxHeight="1.7976931348623157E308" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                   prefHeight="200.0" prefWidth="800.0" styleClass="label-attention" text="Exception!"
                   textAlignment="CENTER" textFill="WHITE" wrapText="true" VBox.vgrow="ALWAYS">
                <font>
                    <Font size="32.0"/>
                </font>
                <padding>
                    <Insets top="60.0"/>
                </padding>
            </Label>
            <Button fx:id="btnConfirm" alignment="CENTER" cache="true" cacheHint="SPEED" focusTraversable="false"
                    graphicTextGap="20.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                    minWidth="-Infinity" mnemonicParsing="false" onAction="#btnConfirmOnAction" prefHeight="72.0"
                    prefWidth="380.0" styleClass="button-confirm" text="OK" textAlignment="CENTER" textFill="WHITE">
                <font>
                    <Font size="24.0"/>
                </font>
                <VBox.margin>
                    <Insets/>
                </VBox.margin>
                <graphic>
                    <ImageView cache="true" cacheHint="SPEED" fitHeight="41.0" fitWidth="49.0" pickOnBounds="true"
                               preserveRatio="true">
                        <Image url="@/gfx/design/btn-accept.png"/>
                    </ImageView>
                </graphic>
            </Button>
        </VBox>
    </center>
</BorderPane>
